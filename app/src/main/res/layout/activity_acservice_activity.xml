<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.user.services.acservice_activity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/llac">

        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:layout_margin="5dp"
                    android:elevation="4dp"
                    android:background="@drawable/card">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Window AC Service"
                            android:textSize="14sp"
                            android:textColor="#000"
                            android:id="@+id/service1"
                            android:layout_margin="10dp"/>

                        <TextView
                            android:textColor="#000"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/service1"
                            android:text="100"
                            android:id="@+id/price1"
                            android:textSize="12sp"
                            android:layout_marginLeft="30dp"/>

                        <Button
                            android:id="@+id/buttonac1"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_margin="5dp"
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            android:text="+"
                            android:textColor="#fff"
                            android:background="@drawable/button"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/add1"
                            android:text="Item"
                            android:textColor="#000"
                            android:layout_toLeftOf="@id/buttonac1"
                            android:layout_margin="5dp"
                            android:layout_centerVertical="true"/>

                        <Button
                            android:id="@+id/buttonac1n"
                            android:layout_toLeftOf="@+id/add1"
                            android:layout_centerVertical="true"
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            android:text="-"
                            android:textSize="30dp"
                            android:textColor="#fff"
                            android:background="@drawable/button"/>

                    </RelativeLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:layout_margin="5dp"
                    android:elevation="4dp"
                    android:background="@drawable/card">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:textColor="#000"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Spilit AC Service"
                            android:textSize="14sp"
                            android:id="@+id/service2"
                            android:layout_margin="10dp"/>
                        <Button
                            android:id="@+id/buttonac2"
                            android:layout_alignParentRight="true"
                            android:layout_margin="5dp"
                            android:layout_centerVertical="true"
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            android:text="+"
                            android:textColor="#fff"
                            android:background="@drawable/button"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/add2"
                            android:text="Item"
                            android:textColor="#000"
                            android:layout_toLeftOf="@id/buttonac2"
                            android:layout_margin="5dp"
                            android:layout_centerVertical="true"/>

                        <Button
                            android:id="@+id/buttonac2n"
                            android:layout_toLeftOf="@+id/add2"
                            android:layout_centerVertical="true"
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            android:text="-"
                            android:textSize="30dp"
                            android:textColor="#fff"
                            android:background="@drawable/button"/>
                        <TextView
                            android:textColor="#000"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/service2"
                            android:id="@+id/price2"
                            android:text="150"
                            android:textSize="12sp"
                            android:layout_marginLeft="30dp"/>

                    </RelativeLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:layout_margin="5dp"
                    android:elevation="4dp"
                    android:background="@drawable/card">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:textColor="#000"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Installation/Uninstallation"
                            android:textSize="14sp"
                            android:id="@+id/service3"
                            android:layout_margin="10dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/service3"
                            android:text="100"
                            android:id="@+id/price3"
                            android:textSize="12sp"
                            android:textColor="#000"
                            android:layout_marginLeft="30dp"/>

                        <Button
                            android:id="@+id/buttonac3"
                            android:layout_alignParentRight="true"
                            android:layout_margin="5dp"
                            android:layout_centerVertical="true"
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            android:text="+"
                            android:textColor="#fff"
                            android:background="@drawable/button"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/add3"
                            android:text="Item"
                            android:textColor="#000"
                            android:layout_toLeftOf="@id/buttonac3"
                            android:layout_margin="5dp"
                            android:layout_centerVertical="true"/>

                        <Button
                            android:id="@+id/buttonac3n"
                            android:layout_toLeftOf="@+id/add3"
                            android:layout_centerVertical="true"
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            android:text="-"
                            android:textSize="30dp"
                            android:textColor="#fff"
                            android:background="@drawable/button"/>
                    </RelativeLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:layout_margin="5dp"
                    android:elevation="4dp"
                    android:background="@drawable/card">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:textColor="#000"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Cleaning AC"
                            android:textSize="14sp"
                            android:id="@+id/service4"
                            android:layout_margin="10dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/service4"
                            android:text="200"
                            android:id="@+id/price4"
                            android:textSize="12sp"
                            android:textColor="#000"
                            android:layout_marginLeft="30dp"/>

                        <Button
                            android:id="@+id/buttonac4"
                            android:layout_alignParentRight="true"
                            android:layout_margin="5dp"
                            android:layout_centerVertical="true"
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            android:text="+"
                            android:textColor="#fff"
                            android:background="@drawable/button"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/add4"
                            android:text="Item"
                            android:textColor="#000"
                            android:layout_toLeftOf="@id/buttonac4"
                            android:layout_margin="5dp"
                            android:layout_centerVertical="true"/>

                        <Button
                            android:id="@+id/buttonac4n"
                            android:layout_toLeftOf="@+id/add4"
                            android:layout_centerVertical="true"
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            android:text="-"
                            android:textSize="30dp"
                            android:textColor="#fff"
                            android:background="@drawable/button"/>

                    </RelativeLayout>

                </android.support.v7.widget.CardView>

            </LinearLayout>

            <LinearLayout

                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:textColor="#000"
                    android:id="@+id/t1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1. 60 days guarantee"
                    android:layout_margin="15dp"
                    android:textSize="15sp"/>
                <TextView
                    android:textColor="#000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="2. Trained and Verified Technicians "
                    android:textSize="15sp" />

            </LinearLayout>
        </LinearLayout>

    </ScrollView>
    <LinearLayout
        android:id="@+id/llac"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:background="@drawable/button">
        <ImageView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_shopping_cart_black_24dp">

        </ImageView>

        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Go To Cart"
            android:textColor="#fff"

            android:textStyle="bold"
            android:textSize="20sp"/>

    </LinearLayout>

</RelativeLayout>