<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:background="@drawable/background"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.user.help.ans1_activity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Book a Service"
        android:textAlignment="center"
        android:layout_margin="15dp"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textColor="#000"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textColor="#000"
                android:text="The following steps are followed\n\n1. Select the service that are required by you.\n2. Now go to cart at located at your dashboard. \n3. Check your orders properfully\n4. Click on Paynow.\n5. Select the payment type accorsing to your requirment.\n6. Fill all your details.\n\7. Now click on confirm to place your order. "
                android:layout_margin="10dp"/>
        </LinearLayout>
    </ScrollView>


</LinearLayout>