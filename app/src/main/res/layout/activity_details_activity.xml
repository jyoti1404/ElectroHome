<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:background="@drawable/background"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.user.user.details_activity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:textStyle="bold"
                android:textColor="#000"
                android:layout_marginTop="10dp"
                android:id="@+id/details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Your Details"
                android:gravity="center"
                android:layout_marginBottom="20dp"
                android:textSize="20sp"/>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tilname"
                android:layout_below="@+id/details">

            <EditText
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/details"
                android:hint="Name"
                android:inputType="text"
                android:textColor="#000"
                android:drawableLeft="@drawable/ic_person_outline_black_24dp"
                android:id="@+id/name" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tilmobile"
                android:layout_below="@+id/tilname">


            <EditText
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name"
                android:hint="Mobile no"
                android:maxLength="10"
                android:inputType="number"
                android:drawableLeft="@drawable/ic_phone_black_24dp"
                android:singleLine="true"
                android:id="@+id/mobileno"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tiltown"
                android:layout_below="@+id/tilmobile">

            <EditText
                android:layout_margin="10dp"
                android:textColor="#000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mobileno"
                android:hint="Town/City"
                android:drawableLeft="@drawable/ic_home_black_24dp"
                android:id="@+id/town"/>

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tilstate"
                android:layout_below="@+id/tiltown">

            <EditText
                android:inputType="text"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:drawableLeft="@drawable/ic_home_black_24dp"
                android:hint="State"
                android:id="@+id/state"/>

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tilstreet"
                android:layout_below="@+id/tilstate">

            <EditText
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:drawableLeft="@drawable/ic_home_black_24dp"
                android:inputType="text"
                android:hint="Street/area"
                android:id="@+id/street"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tilpin"
                android:layout_below="@+id/tilstreet">


            <EditText
                android:inputType="number"
                android:maxLength="6"
                android:drawableLeft="@drawable/ic_person_pin_circle_black_24dp"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pincode"
                android:hint="Pincode"
                android:id="@+id/pincode"/>

            </android.support.design.widget.TextInputLayout>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_alignParentBottom="true"
                android:layout_below="@+id/tilpin"
                android:layout_centerHorizontal="true"
                android:text="Confirm"
                android:textColor="#fff"
                android:id="@+id/confirm"
                android:background="@drawable/button"/>
        </RelativeLayout>
    </ScrollView>


</LinearLayout>